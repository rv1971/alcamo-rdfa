{
    "name": "alcamo/rdfa",
    "description": "Classes to store RDFa statements",
    "keywords": [ "rdfa", "rdf", "statement" ],
    "license": "Apache-2.0",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/rv1971/alcamo-core"
        },
        {
            "type": "vcs",
            "url": "https://github.com/rv1971/alcamo-xml-creation"
        },
        {
            "type": "vcs",
            "url": "https://github.com/rv1971/alcamo-html-creation"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "7.3 - 7.4",
        "alcamo/core": "dev-master",
        "alcamo/html-creation": "dev-master"
    },
    "autoload": {
	"psr-4": {
	    "alcamo\\rdfa\\": "src/"
	}
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "test": [
            "phpunit tests",
            "phpcs --standard=PSR12 -p -s src",
            "phpcs --standard=PSR12 -p -s --exclude=PSR1.Classes.ClassDeclaration,PSR1.Files.SideEffects tests"
        ],
        "fix": [
            "phpcbf --standard=PSR12 -p -s src",
            "phpcbf --standard=PSR12 -p -s --exclude=PSR1.Classes.ClassDeclaration,PSR1.Files.SideEffects tests"
        ]
    }
}
